
@using OPM.ViewModels;
@model AddBookViewModel;

@* This is the form to add a new book into the database
    Currently it relates to the index, where a master list has been created*@

<h2>
    Add a New Book to your Shelf
</h2>

<form method="post">

    <div asp-controller="Books" asp-action="Add" class="form-group">
        <label asp-for="BookTitle"> Title </label>
        <input asp-for="BookTitle" />
        <span asp-validation-for="BookTitle"></span>
    </div>

    <div class="form-group">
        <label asp-for="AuthName"> Author's Name </label>
        <input asp-for="AuthName" />
        <span asp-validation-for="AuthName"></span>
    </div>

    <div class="form-group">
        <label asp-for="TotalPages"> Number of Pages </label>
        <input asp-for="TotalPages" />
        <span asp-validation-for="TotalPages"></span>
    </div>

    <div class="form-group">
        <label asp-for="StartPage"> Starting Page Number </label>
        <input asp-for="StartPage" />
        <span asp-validation-for="StartPage"></span>
    </div>

    <div>
        <label for="start">Start date:</label>
        <input type="date" id="start" name="trip-start"
               value=""
               min="2020-01-01" max="2099-12-31">
    </div>
    


    <input type="submit" value="Add Book" />
</form>
@model AddParentViewModel;


<h2>Create Parent Account</h2>

<form method="post">

    <div asp-controller="Parent" asp-action="Add" class="form-group">
        <label asp-for="Name"> Name </label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>

    <div asp-controller="Parent" asp-action="Add" class="form-group">
        <label asp-for="UserName"> Username </label>
        <input asp-for="UserName" />
        <span asp-validation-for="UserName"></span>
    </div>

    <div asp-controller="Parent" asp-action="Add" class="form-group">
        <label asp-for="ContactEmail"> Email </label>
        <input asp-for="ContactEmail" />
        <span asp-validation-for="ContactEmail"></span>
    </div>

    <input type="submit" value="Add Parent" />

</form>